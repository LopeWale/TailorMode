# Database connection string for Prisma. Use a managed Postgres provider (e.g., Neon) per regional residency.
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tailormode?schema=public"

# PostHog API keys for instrumentation.
NEXT_PUBLIC_POSTHOG_KEY=""
POSTHOG_API_KEY=""
POSTHOG_HOST="https://app.posthog.com"

# Sentry DSN for error reporting.
SENTRY_DSN=""

# Stripe keys for subscription and usage metering.
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Feature flag to allow enabling the measurement assistant beta.
FEATURE_FLAG_MEASUREMENT_ASSISTANT="false"

# Capture payload storage configuration for signed uploads.
AWS_REGION="af-south-1"
CAPTURE_UPLOAD_BUCKET="tailormode-captures-dev"
CAPTURE_UPLOAD_PREFIX="captures"
CAPTURE_UPLOAD_URL_TTL_SECONDS="900"
# Optional: point to regional object storage that supports S3-compatible APIs.
CAPTURE_UPLOAD_ENDPOINT=""
